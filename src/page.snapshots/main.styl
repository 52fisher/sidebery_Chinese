@import '../styles/mixins'
@import '../styles/vars'
@import '../styles/btn'

html
  box(relative)
  size(h: 100%)
  text(s: 16px)

body
  box(relative)
  size(100%, same)
  text(sans-serif, smooth: on)
  padding: 0
  margin: 0
  -moz-user-select: none
  a
    text-decoration: none

.root
  box(relative, flex)
  size(rel(100%, -16px), min-h: 100%)
  flex-direction: column
  align-items: center
  padding: 0 8px
  margin: 0
  background-color: var(--bg)

// --- Hidden elements ---
.hidden
.hidden-assets
  box(absolute)
  pos(0, 0)
  size(0, 0)
  overflow: hidden
  opacity: 0

.logo
  box(relative)
  text(s: 1.5rem, w: 700)
  margin: 20px auto 50px
  color: var(--inactive-fg)
  cursor: default
  opacity: .24
