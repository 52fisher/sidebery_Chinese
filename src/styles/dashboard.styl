.options
  box(relative, flex)
  flex-wrap: wrap
  flex-direction: column
  justify-content: flex-start
  margin: 8px 0 0

.options > .opt
  box(relative)
  text(s: rem(15))
  color: var(--ctx-menu-fg)
  padding: 4px 8px 4px 12px
  cursor: pointer
  transition: color var(--d-fast), background-color var(--d-fast)
  &:hover
    background-color: var(--ctx-menu-bg-hover)
  &:active
    transition: none
  &.-warn
    color: var(--ctx-menu-warn-fg)
    &:hover
      background-color: var(--ctx-menu-warn-bg-hover)
      color: var(--ctx-menu-fg)
