@import './mixins'

html
  box(relative)
  size(h: 100%)

body
  box(relative)
  size(100%, 100%)
  text(smooth: on)
  padding: 0
  margin: 0
  a
    text-decoration: none

// --- Hidden elements ---
.hidden
.hidden-assets
  box(absolute)
  pos(0, 0)
  size(0, 0)
  overflow: hidden
  opacity: 0

.dbg
  box(absolute)
  pos(b: 0, l: 0)
  text(f: monospace, s: rem(11), c: #ffffff)
  padding: 8px