@import '../../mixins'

.SelectField
  box(relative, flex)
  size(min-h: 42px)
  justify-content: space-between
  align-items: center
  padding: 2px 16px 0
  cursor: pointer
  opacity: .8
  -moz-user-select: none
  &:not(:last-of-type):not(.-last):before
    content: ''
    box(absolute)
    size(100%, 1px)
    pos(b: 0, l: 0)
    background-color: var(--border-fg)
    box-shadow: 0 1px 0 0 var(--border-flare-fg)
  &:hover
    opacity: 1
  &:active
    opacity: .7
  &[data-inactive]
    opacity: .2
    cursor: default

// ---
// -- Label
// -
.SelectField .label
  box(relative)
  text(s: rem(16))
  color: var(--label-fg)
  transition: color var(--d-fast)
