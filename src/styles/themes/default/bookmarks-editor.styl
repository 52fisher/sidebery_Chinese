@import '../../mixins'

.BEditor
  box(absolute)
  size(100%)
  pos(b: 0, l: 0)
  padding: 0 0 16px
  background-color: var(--bg)
  z-index: 100
  box-shadow: 0 -1px 12px 0 #00000056, 0 -1px 0 0 #00000012

.BEditor .field
  box(relative)
  margin: 12px 16px 0
  &.-title
    > .input
      text(s: rem(18))
      color: var(--title-fg)

.BEditor .field > .input
  text(s: rem(15))
  margin: 2px 0 0
  color: var(--sub-title-fg)
  transition: color 1s
  > input
  > textarea
  > .placeholder
    padding: 2px 0
  &.err
    transition: none
    color: var(--false-fg)

.BEditor .ctrls
  box(relative, flex)
  align-items: center
  justify-content: center
  padding: 0 12px
  margin: 16px 0 0

.BEditor .ctrls > .btn
  text(s: rem(14))
  padding: 3px 10px
  margin: 0 8px
