@import '../../mixins'

// For:
// - select-color.vue
// - select-icon.vue

.SelectOptField
  box(relative)
  padding: 2px 0
  margin: 0 12px 0 16px
  cursor: pointer

  &.-no-top-margin
    margin-top: 0

// ---
// -- Label
// -
.SelectOptField .label
  box(relative)
  text(s: rem(14))
  color: var(--label-fg)
  opacity: .8

.SelectOptField:hover .label
  opacity: 1
