@import '../../../utils'

.BookmarksPopup .field
  position: relative
  padding: 2px 4px
  &:first-of-type
    margin-top: 0

.BookmarksPopup .field-label
  position: relative
  width: 100%
  font-size: rem(12)
  font-weight: 700
  color: var(--toolbar-fg)
  opacity: .7

.BookmarksPopup .field > .input
  font-size: rem(16)
  margin: 4px 0 8px
  color: var(--toolbar-fg)
  transition: color 1s
  &.err
    transition: none
    color: var(--status-err)

.BookmarksPopup .location
  position: relative
  padding: 2px 4px
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: calc(100% - 1px)
    background-color: var(--element-overlay-bg)
    opacity: 0
  &[data-wrong="true"] .location-value
    animation: shake-animation .3s, err-blink-animation .6s
  &:hover:before
    opacity: .3
  &:active:before
    opacity: .2

.BookmarksPopup .location-path
  position: relative
  margin: 2px 0 0 0
  font-size: rem(11)
  color: var(--toolbar-fg)
  opacity: .7
  white-space: pre-wrap

.BookmarksPopup .location-body
  position: relative
  display: flex
  align-items: center

.BookmarksPopup .folder-icon
  position: relative
  width: 16px
  height: 16px
  margin: 0 3px 0 0
  flex-shrink: 0
  fill: var(--toolbar-fg)
  opacity: .7

.BookmarksPopup .location-value
  position: relative
  padding: 2px 0
  margin: 0 24px 0 4px
  flex-grow: 1
  font-size: rem(16)
  font-weight: 700
  color: var(--toolbar-fg)
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.BookmarksPopup .new-folder-btn
  position: absolute
  width: 32px
  height: 32px
  top: -5px
  right: -8px
  padding: 8px 8px
  margin: 0 0 0 3px
  flex-shrink: 0
  cursor: pointer
  > svg
    position: absolute
    top: 8px
    left: 8px
    width: 16px
    height: 16px
    fill: var(--toolbar-fg)
    opacity: .7
  &:hover > svg
    opacity: 1
  &:active > svg
    opacity: .5

.BookmarksPopup .new-folder-field
  position: relative
  display: flex
  min-height: 22px
  margin: 4px 0 2px
  align-items: center

.BookmarksPopup .new-folder-input
  font-size: rem(16)
  margin: 0 20px 0 0
  width: 100%
  color: var(--toolbar-fg)
  transition: color 1s
  &.err
    transition: none
    color: var(--status-err)

.BookmarksPopup .tree
  position: relative
  display: flex
  flex-direction: column
  min-height: 64px
  overflow: hidden
  background-color: var(--toolbar-bg-overlay)
  user-select: none

.BookmarksPopup .scrollable
  margin-top: 1px

.BookmarksPopup .tree .fav:hover
  transition: none
  opacity: .64
.BookmarksPopup .tree .fav:active
  transition: none
  opacity: .32

.BookmarksPopup .tree .dnd-layer
  display: none

.BookmarksPopup .tree + .ctrls
  margin: 0
  box-shadow: inset 0 1px 0 0 var(--border-flare)

.BookmarksPopup .recent-locations
  position: relative
  padding: 2px 0
  margin: 6px 0 0

.BookmarksPopup .recent-locations .field-label
  padding: 0 4px 2px

.BookmarksPopup .recent-folder
  position: relative
  display: flex
  justify-content: center
  align-items: center
  padding: 3px 4px
  margin: 1px 0
  border-radius: 1px
  &:before, &:after
    content: ''
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    border-radius: 1px
  &:before
    background-color: var(--toolbar-fg)
  &:after
    box-shadow: inset 0 0 0 1px var(--toolbar-fg)
  &:hover:before
    opacity: .2
  &[data-sel="true"]:after
  &[data-sel="true"]:before
    opacity: .2
  &:active:before
    opacity: .1

.BookmarksPopup .folder-icon
  position: relative
  width: 16px
  height: 16px
  margin: 0 4px 0 0

.BookmarksPopup .folder-label
  position: relative
  width: 100%
  font-size: rem(16)
  color: var(--toolbar-fg)
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
