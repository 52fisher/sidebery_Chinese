@import '../../../mixins'

#root
  &[data-color-scheme="dark"]
    --trash-item-title-fg: #ffffffea
  &[data-color-scheme="light"]
    --trash-item-title-fg: #000000ac

.TrashPanel
  position: absolute
  display: flex
  width: 100%
  height: 100%
  flex-direction: column
  z-index: 100
  transition: transform var(--d-fast), opacity var(--d-fast), z-index var(--d-fast)
  box-shadow: 0 0 8px 0 var(--border), 0 -1px 0 0 var(--border)

.TrashPanel .controls-bar
  position: relative
  width: 100%
  height: 28px
  overflow: hidden
  flex-shrink: 0
  box-shadow: 0 0 3px 0 #00000016
  .controls-box
    position: relative
    width: 100%
    height: 56px
    overflow: hidden
    flex-shrink: 0
    transition: transform var(--d-fast)
    transform: translateY(0)
  &[data-info="true"] .controls-box
    transform: translateY(-28px)
  &:hover .controls-box
    transform: translateY(0)


.TrashPanel .info-bar
  position: relative
  display: flex
  width: 100%
  height: 28px
  justify-content: center
  align-items: center
  box-shadow: inset 0 -1px 0 0 var(--border), inset 0 1px 0 0 var(--border-flare)
  background-color: var(--toolbar-bg)
  background-image: var(--bg-img)
  background-size: var(--bg-size)
  .title
    position: relative
    color: var(--toolbar-fg)
    font-size: rem(15)
    font-weight: 700


.TrashPanel .scrollable
  padding: 1px 0 0

.TrashPanel .list-placeholder
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  color: var(--toolbar-fg)
  font-size: rem(14)
  font-weight: 700
  opacity: .7

.TrashPanel .group
  position: relative

.TrashPanel .group-list
  position: relative
  padding: 0 0 0 6px

.TrashPanel .item
  position: relative
  margin: 0 0 1px
  padding: 2px 0 4px
  background-color: var(--toolbar-bg)
  box-shadow: inset 1px 1px 0 0 var(--border-flare), 0 0 3px 0 #00000016
  border-radius: var(--element-roundness)
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    box-shadow: inset 0 0 0 1px var(--element-overlay-border)
    background-color: var(--element-overlay-bg)
    opacity: 0
    border-radius: var(--element-roundness)
  &:hover:before
    opacity: .1
  &:active:before
    opacity: .5
  &[data-sel="true"]:before
    opacity: .5

  &[data-lvl="1"]
    padding-left: 10px
  &[data-lvl="2"]
    padding-left: 20px
  &[data-lvl="3"]
    padding-left: 30px
  &[data-lvl="4"]
    padding-left: 40px
  &[data-lvl="5"]
    padding-left: 50px

  .line
    position: relative
    display: flex
    align-items: center

  .fav
    position: relative
    width: 16px
    height: 16px
    flex-shrink: 0
    margin: 3px 0 0 4px
    > svg, > img
      position: absolute
      width: 16px
      height: 16px
      top: 0
      left: 0
      fill: var(--toolbar-fg)
      opacity: .7

  svg.-badge
    position: relative
    flex-shrink: 0
    width: 10px
    height: 10px
    margin: 3px 4px 0 4px
    fill: var(--toolbar-fg)

  .type-icon
    position: relative
    width: 16px
    height: 16px
    flex-shrink: 0
    margin: 3px 0 0 4px
    > svg
      position: absolute
      width: 16px
      height: 16px
      top: 0
      left: 0
      fill: var(--toolbar-fg)

  .title
    position: relative
    width: 100%
    height: 16px
    margin: 3px 0 0 5px
    font-size: rem(15)
    color: var(--trash-item-title-fg)
    white-space: nowrap
    overflow: hidden
    transition: transform var(--d-fast), color var(--d-fast)
    mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)

  .info
    position: relative
    margin: 2px 0 0 0
    padding: 0 4px
    font-size: rem(12)
    color: var(--toolbar-fg)
    opacity: .7
    white-space: nowrap
    overflow: hidden
    flex-grow: 1
    mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)
    &.-align-right
      flex-shrink: 0
      text-align: right
      text-overflow: ellipsis
      mask: none
