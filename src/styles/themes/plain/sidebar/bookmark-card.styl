@import '../../../utils'

.BookmarkCard
  position: relative
  padding: 0 0 1px

.BookmarkCard .body
  position: relative
  padding: 1px 0 2px
  background-color: var(--element-bg)
  box-shadow: 0 0 3px 0 #00000016
  border-radius: var(--element-roundness)
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    box-shadow: inset 0 0 0 1px var(--element-overlay-border)
    background-color: var(--element-overlay-bg)
    opacity: 0
    border-radius: var(--element-roundness)
.BookmarkCard:hover .body:before
  opacity: .2
.BookmarkCard:active .body:before
  opacity: .6
.BookmarkCard[data-selected="true"] .body:before
  opacity: .6
.BookmarkCard[data-open="true"] .body:after
  content: ''
  position: absolute
  top: 2px
  left: 2px
  width: 3px
  height: 3px
  border-radius: 50%
  background-color: var(--toolbar-fg)

// ---
// -- Line
// -
.BookmarkCard .line
  position: relative
  display: flex
  align-items: center

// ---
// -- Drag layer
// -
.BookmarkCard .dnd-layer
  z-index: 15

// ---
// -- Favicon
// -
.BookmarkCard .fav
  position: relative
  width: 16px
  height: 16px
  flex-shrink: 0
  margin: 3px 0 0 4px

.BookmarkCard .fav > svg
.BookmarkCard .fav > img
  position: absolute
  width: 16px
  height: 16px
  top: 0
  left: 0
  fill: var(--toolbar-fg)
.BookmarkCard .fav > svg
  opacity: .7

// ---
// -- Title
// -
.BookmarkCard .title
  position: relative
  width: 100%
  margin: 3px 1px 0 3px
  font-size: rem(15)
  color: var(--toolbar-fg)
  white-space: nowrap
  overflow: hidden
  transition: transform var(--d-fast), color var(--d-fast)
  mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)

// ---
// -- Info
// -
.BookmarkCard .info
  position: relative
  width: 100%
  margin: 2px 0 0 4px
  font-size: rem(12)
  color: var(--toolbar-fg)
  white-space: nowrap
  overflow: hidden
  opacity: .7
  mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)
  &.-end
    width: auto
    flex-shrink: 0
    margin-right: 4px
    mask: none
