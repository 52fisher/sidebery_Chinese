@import '../../../mixins'

.TrashPanel
  position: absolute
  display: flex
  width: 100%
  height: 100%
  flex-direction: column
  z-index: 100
  transition: transform var(--d-fast), opacity var(--d-fast), z-index var(--d-fast)

.TrashPanel .controls-bar
  position: relative
  width: 100%
  height: 31px
  overflow: hidden
  flex-shrink: 0
  box-shadow: 0 0 0 1px var(--ff-border)
  margin: 0 0 1px
  background-color: var(--toolbar-bg)

.TrashPanel .scrollable
  padding: 1px 0 0
  box-shadow: inset 0 -1px 0 0 var(--border)

.TrashPanel .list-placeholder
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  color: var(--frame-fg)
  font-size: rem(14)
  font-weight: 700
  opacity: .7

.TrashPanel .group
  position: relative

.TrashPanel .group-list
  position: relative
  padding: 0 0 12px

.TrashPanel .item
  position: relative
  margin: 1px
  padding: 3px 0 5px
  background-color: var(--frame-bg)
  z-index: 10
  &:before
    content: ''
    position: absolute
    top: 1px
    left: 1px
    width: calc(100% - 2px)
    height: calc(100% - 2px)
    border-radius: 4px
  &:hover:before
    background-color: var(--hover-bg)
  &:active:before
    background-color: var(--clicked-bg)
  &[data-sel="true"]:before
    background-color: var(--selected-bg)
    box-shadow: inset 0 0 0 1px var(--selected-border)
  &[data-lvl="1"]
    padding-left: 10px
  &[data-lvl="2"]
    padding-left: 20px
  &[data-lvl="3"]
    padding-left: 30px
  &[data-lvl="4"]
    padding-left: 40px
  &[data-lvl="5"]
    padding-left: 50px

  .line
    position: relative
    display: flex
    align-items: center

  .fav
    position: relative
    width: 16px
    height: 16px
    flex-shrink: 0
    margin: 3px 0 0 6px
    > svg, > img
      position: absolute
      width: 16px
      height: 16px
      top: 0
      left: 0
      fill: var(--frame-fg)
    > svg
      opacity: .7

  svg.-badge
    position: relative
    flex-shrink: 0
    width: 10px
    height: 10px
    margin: 3px 4px 0 4px
    fill: var(--frame-fg)
    opacity: .7

  .type-icon
    position: relative
    width: 16px
    height: 16px
    flex-shrink: 0
    margin: 3px 0 0 6px
    > svg
      position: absolute
      width: 16px
      height: 16px
      top: 0
      left: 0
      fill: var(--frame-fg)
      opacity: .7

  .title
    position: relative
    width: 100%
    height: 16px
    margin: 3px 4px 0 5px
    font-size: rem(15)
    color: var(--frame-fg)
    white-space: nowrap
    overflow: hidden
    transition: transform var(--d-fast), color var(--d-fast)
    mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)

  .info
    position: relative
    margin: 2px 0 0 0
    padding: 0 4px 0 6px
    font-size: rem(12)
    color: var(--frame-fg)
    white-space: nowrap
    overflow: hidden
    flex-grow: 1
    mask: linear-gradient(-90deg, transparent, #000000 12px, #000000)
    opacity: .7
    &.-align-right
      flex-shrink: 0
      text-align: right
      text-overflow: ellipsis
      mask: none
