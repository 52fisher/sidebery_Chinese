// ---
// -- Base geometry
// -
#root
  --general-margin: 2px
  --general-border-radius: 4px
#root[data-density="compact"]
  --general-margin: 1px
  --general-border-radius: 3px

// ---
// -- Base colors
// -
#root[data-color-scheme="dark"]
  --frame-bg: var(--ff-frame, var(--ff-toolbar, #282828))
  --frame-fg: var(--ff-tab-background-text, #ccc)
  --toolbar-bg: var(--ff-toolbar, #323232)
  --toolbar-fg:
    var(--ff-icons,
    var(--ff-toolbar-text,
    var(--ff-bookmark-text,
    var(--ff-icons-attention, #eee))))
  --hover-bg: #ffffff16
  --clicked-bg: #ffffff24
  --active-bg: #ffffff24
  --active-border: #ffffff00
  --selected-bg: #ffffff24
  --selected-border: #47cfff
  --status-ok: #64df64
  --status-err: #df6464
  --status-active: #4993E6
  --status-notice: #00e9fb
  --border: var(--ff-toolbar-bottom-separator, var(--ff-toolbar-top-separator, #212121))

#root[data-color-scheme="light"]
  --frame-bg: var(--ff-frame, var(--ff-toolbar, #f0f0f0))
  --frame-fg: var(--ff-tab-background-text, #222)
  --toolbar-bg: var(--ff-toolbar, #fafafa)
  --toolbar-fg:
    var(--ff-icons,
    var(--ff-toolbar-text,
    var(--ff-bookmark-text,
    var(--ff-icons-attention, #111))))
  --hover-bg: #00000012
  --clicked-bg: #0000001c
  --active-bg: #00000018
  --active-border: #00000008
  --selected-bg: #00000012
  --selected-border: #146fd9
  --status-ok: #098623
  --status-err: #d72f2f
  --status-active: #146fd9
  --status-notice: #01acda
  --border: var(--ff-toolbar-bottom-separator, var(--ff-toolbar-top-separator, #dbdbdb))

// ---
// -- Local color
// -
#root[data-color-scheme="dark"]
  [data-color="toolbar"]
    --color: #f2f2f2
  [data-color="inactive"]
    --color: #aaa
  [data-color="yellow"]
    --color: #ffcb00
  [data-color="purple"]
    --color: #c071fc
#root[data-color-scheme="light"]
  [data-color="toolbar"]
    --color: #121212
  [data-color="inactive"]
    --color: #646464
  [data-color="yellow"]
    --color: #f7c500
  [data-color="purple"]
    --color: #af51f5

[data-color="blue"]
  --color: #37adff
[data-color="turquoise"]
  --color: #00c79a
[data-color="green"]
  --color: #51cd00
[data-color="orange"]
  --color: #ff9f00
[data-color="red"]
  --color: #ff613d
[data-color="pink"]
  --color: #ff4bda

// ---
// -- Animation speed
// -
#root[data-animations="none"]
  --d-swift: 0s
  --d-fast: 0s
  --d-norm: 0s
  --d-slow: 0s
#root[data-animations="fast"]
  --d-swift: .1s
  --d-fast: .12s
  --d-norm: .2s
  --d-slow: .3s
#root[data-animations="norm"]
  --d-swift: .12s
  --d-fast: .16s
  --d-norm: .3s
  --d-slow: .42s
#root[data-animations="slow"]
  --d-swift: .16s
  --d-fast: .2s
  --d-norm: .3s
  --d-slow: .5s
