@import '../../../mixins'

.Settings .keybinding
  position: relative
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: flex-start
  padding: 0 16px
  cursor: pointer
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 3px
    background-color: var(--toolbar-fg)
    opacity: 0
  &:not(:first-of-type):after
    content: ''
    position: absolute
    top: 0
    left: 4px
    width: calc(100% - 8px)
    height: 1px
    background-color: var(--toolbar-fg)
    opacity: .1
  &:hover:before
    opacity: .06
  &:active:before
    opacity: .03
  &[is-focused="true"]:not([data-disabled="true"])
    opacity: 1
    > .value:before
      opacity: 1
    &:before
      opacity: .2
  &[data-error="true"]:not([data-disabled="true"])
    opacity: 1
    > .value
      color: var(--status-err)
      &:before
        box-shadow: inset 0 0 0 1px var(--status-err)
    > .label
      color: var(--status-err)
  &[data-disabled="true"]
    opacity: .3

.keybinding > .label
  position: relative
  font-size: rem(16)
  flex-grow: 1
  line-height: 26px
  color: var(--toolbar-fg)
  margin: 0 6px 0 0
  padding: 4px 0
  transition: color var(--d-fast)

.keybinding > .value
  position: relative
  font-size: rem(13)
  padding: 2px 6px
  margin: auto 0 auto auto
  color: var(--toolbar-fg)
  background-color: #78787832
  border-radius: 4px
  white-space: nowrap
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 4px
    box-shadow: inset 0 0 0 1px var(--toolbar-fg)
    opacity: .3

.keybinding > input
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0
  opacity: 0
  z-index: -1

.keybinding > .ToggleInput
  padding: 4px 0 4px 16px
  flex-wrap: nowrap
