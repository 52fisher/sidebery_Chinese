.SelectOptInput
  box(relative, flex)
  flex-wrap: wrap

.SelectOptInput > .icon
  box(relative, flex)
  size(26px, same)
  justify-content: center
  align-items: center
  margin: 0 -1px 0 0
  cursor: pointer
  border-radius: 2px
  background-color: #00000016
  box-shadow: inset 0 1px 0 0 #ffffff00,
              inset 1px 0 0 0 var(--border-fg),
              inset -1px 0 0 0 var(--border-fg),
              0 -1px 0 0 var(--border-fg),
              inset 0 -1px 0 0 var(--border-fg),
              inset 0 0 8px 0 #00000032
  &:hover
    opacity: 1
  &:active
    opacity: .8
  &[data-active]
    z-index: 1
    background-color: #00000000
    background-image: linear-gradient(#00000000, #00000016)
    box-shadow: inset 0 1px 0 0 #ffffff08,
                inset 1px 0 0 0 var(--border-active-fg),
                inset -1px 0 0 0 var(--border-active-fg),
                0 -1px 0 0 var(--border-active-fg),
                inset 0 -1px 0 0 var(--border-active-fg),
                0 1px 8px 0 #00000032
  
  > svg
    box(absolute)
    size(16px, same)
    transition: opacity var(--d-fast)