@import '../../mixins'

.Dashboard
  box(relative, flex)
  flex-direction: column

.Dashboard > h2
  box(relative)
  text(s: rem(24), w: 400)
  text-shadow: 1px 1px 0 var(--text-edge-color)
  color: var(--title-fg)
  margin: 12px 12px 12px
  padding: 0

.Dashboard .fields
  box(relative, flex)
  flex-direction: column
  grid-gap: 3px 0

.Dashboard  .ToggleField:last-of-type
  margin-bottom: 8px

.Dashboard .delimiter
  box(relative, block)
  margin: 4px auto 0

.delimiter
  box(none)

.options
  box(relative, flex)
  margin-top: 2px
  padding-bottom: 1px
  flex-wrap: wrap
  flex-direction: column
  justify-content: flex-start
  box-shadow: inset 0 -1px 0 0 var(--border-fg)

.options > .opt
  box(relative)
  text(s: rem(15), w: 700)
  margin: 1px 2px 2px
  color: var(--label-fg)
  text-shadow: 1px 1px 0 var(--text-edge-color)
  padding: 4px 8px 4px 8px
  border-radius: 2px
  text-align: center
  cursor: pointer
  transition: color var(--d-fast), background-color var(--d-fast)
  box-shadow: inset 0 1px 0 0 #ffffff12,
              inset 1px 0 0 0 var(--border-fg),
              inset -1px 0 0 0 var(--border-fg),
              0 -1px 0 0 var(--border-fg),
              inset 0 -1px 0 0 var(--border-fg),
              0 1px 8px 0 #00000024
  background-image: linear-gradient(#ffffff08, #00000012)
  &:hover
    background-color: var(--ctx-menu-bg-hover)
  &:active
    transition: none
  &.-warn
    color: var(--false-fg)
    &:hover
      background-color: var(--false-bg)
      color: #ffffff

.dash-ctrls
  box(relative, flex)
  flex-flow: wrap
  box-shadow: inset 0 1px 0 0 var(--border-flare-fg)

.dash-ctrls .ctrl-panel
.dash-ctrls .ctrl-left
.dash-ctrls .ctrl-rm
.dash-ctrls .ctrl-right
  box(relative, flex)
  size(h: 30px, min-w: 30px)
  flex: 1
  padding: 1px 0 0
  cursor: pointer
  > svg
    box(absolute)
    pos(calc(50% - 8px), same)
    size(16px, same)
    fill: var(--label-fg)
  &:hover
    background-color: #00000032
    box-shadow: inset 0 0 0 1px #00000024, inset 0 0 8px 0 #00000012
  &:active
    opacity: .7

.dash-ctrls .ctrl-panel
  > svg
    fill: var(--panel-fg)
  > .title
    box(none)
  &[data-active]
    background-color: #00000032
    box-shadow: inset 0 0 0 1px #00000024, inset 0 0 8px 0 #00000012
#root[data-style="light"] .dash-ctrls .ctrl-panel[data-color] > svg
  fill: var(--nav-btn-fg) !important
  filter: drop-shadow(1px 0 0 var(--panel-fg)) drop-shadow(-1px 0 0 var(--panel-fg)) drop-shadow(0 -1px 0 var(--panel-fg)) drop-shadow(0 1px 0 var(--panel-fg))

.dash-ctrls .ctrl-left > svg
  transform: rotate(90deg)

.dash-ctrls .ctrl-rm
  > svg
    pos(calc(50% - 10px), same)
    size(20px, same)
    fill: var(--false-fg)
  &:hover
    background-color: var(--false-bg)
    > svg
      fill: var(--label-fg)

.dash-ctrls .ctrl-right > svg
  size(16px, same)
  transform: rotate(-90deg)
