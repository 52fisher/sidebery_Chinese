@import '../../mixins'

.Menu
  box(relative, grid)
  grid-gap: 3px 0

.Menu > h2
  box(relative)
  text(s: rem(24), w: 400)
  color: var(--title-fg)
  margin: 16px 12px 12px
  padding: 0

.Menu  .ToggleField:last-of-type
  margin-bottom: 8px

.Menu .delimiter
  box(relative, block)
  margin: 4px auto 0

.delimiter
  box(none)

.options
  box(relative, flex)
  flex-wrap: wrap
  flex-direction: column
  justify-content: flex-start

.options > .opt
  box(relative)
  text(s: rem(15))
  color: var(--ctx-menu-fg)
  padding: 4px 8px 4px 8px
  text-align: center
  margin-top: 1px
  cursor: pointer
  transition: color var(--d-fast), background-color var(--d-fast)
  box-shadow: 0 -1px 0 0 #00000032
  background-image: linear-gradient(#ffffff08, #00000012)
  &:hover
    background-color: var(--ctx-menu-bg-hover)
  &:active
    transition: none
  &.-warn
    color: var(--ctx-menu-warn-fg)
    &:hover
      background-color: var(--ctx-menu-warn-bg-hover)
      color: #ffffff
