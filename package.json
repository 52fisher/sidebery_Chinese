{
  "name": "sidebery",
  "version": "2.4.2",
  "description": "Manage your tabs and bookmarks in sidebar",
  "main": "index.js",
  "scripts": {
    "dev.sidebar": "parcel watch ./src/sidebar/sidebar.js -d ./addon/sidebar/ --public-url ./ --no-autoinstall --log-level 4",
    "dev.group": "parcel watch ./src/page.group/group.html -d ./addon/group/ --public-url ./ --no-autoinstall",
    "dev.perm.url": "parcel watch ./src/page.permissions/all-urls.html -d ./addon/permissions/ --public-url ./ --no-autoinstall",
    "dev.perm.hide": "parcel watch ./src/page.permissions/tab-hide.html -d ./addon/permissions/ --public-url ./ --no-autoinstall",
    "dev.debug": "parcel watch ./src/page.debug/debug.html -d ./addon/debug/ --public-url ./ --no-autoinstall",
    "dev.settings": "rm -rf addon/settings && parcel watch ./src/page.settings/settings.html -d ./addon/settings/ --public-url ./ --no-autoinstall",
    "dev.menu": "parcel watch ./src/page.menu/menu.html -d ./addon/menu/ --public-url ./ --no-autoinstall",
    "dev.styles": "parcel watch ./src/page.styles/styles.html -d ./addon/styles/ --public-url ./ --no-autoinstall",
    "dev.theme": "parcel watch ./src/page.theme/theme.html -d ./addon/theme/ --public-url ./ --no-autoinstall",
    "dev.snapshots": "parcel watch ./src/page.snapshots/snapshots.html -d ./addon/snapshots/ --public-url ./ --no-autoinstall",
    "dev.ext.en": "web-ext run --source-dir ./addon -f firefox-beta --keep-profile-changes --firefox-profile ./build/profile-beta",
    "dev.ext.ru": "web-ext run --source-dir ./addon -f firefox --keep-profile-changes --firefox-profile ./build/profile-ru",
    "dev.ext.esr": "web-ext run --source-dir ./addon -f firefox-esr --keep-profile-changes --firefox-profile ./build/profile-esr",
    "dev.themes.default": "stylus ./src/styles/themes/default/index.styl -w --out ./addon/themes/default.css",
    "dev.themes.tactile": "stylus ./src/styles/themes/tactile/index.styl -w --out ./addon/themes/tactile.css",
    "dev.themes.none": "stylus ./src/styles/themes/none/index.styl -w --out ./addon/themes/none.css",

    "build.sidebar": "parcel build ./src/sidebar/index.html -d ./addon/sidebar/ --public-url ./ --no-autoinstall --no-source-maps",
    "build.group": "parcel build ./src/page.group/group.html -d ./addon/group/ --public-url ./ --no-autoinstall --no-source-maps",
    "build.perm.url": "parcel build ./src/page.permissions/all-urls.html -d ./addon/permissions/ --public-url ./ --no-autoinstall --no-source-maps",
    "build.perm.hide": "parcel build ./src/page.permissions/tab-hide.html -d ./addon/permissions/ --public-url ./ --no-autoinstall --no-source-maps",
    "build.debug": "parcel build ./src/page.debug/debug.html -d ./addon/debug/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.settings": "parcel build ./src/page.settings/settings.html -d ./addon/settings/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.menu": "parcel build ./src/page.menu/menu.html -d ./addon/menu/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.styles": "parcel build ./src/page.styles/styles.html -d ./addon/styles/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.theme": "parcel build ./src/page.theme/theme.html -d ./addon/theme/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.snapshots": "parcel build ./src/page.snapshots/snapshots.html -d ./addon/snapshots/ --public-url ./ --no-autoinstall --no-source-maps --no-minify",
    "build.ext": "web-ext build --source-dir ./addon -a dist/ -i *.lock ./package.json",
    "build": "node ./build/release.js",

    "clear.cache": "rm -rf .cache",
    "clear.group": "rm -rf addon/group",
    "clear.permissions": "rm -rf addon/permissions",
    "clear.debug": "rm -rf addon/debug",
    "clear.settings": "rm -rf addon/settings",
    "clear.menu": "rm -rf addon/menu",
    "clear.styles": "rm -rf addon/styles",
    "clear.theme": "rm -rf addon/theme",
    "clear.snapshots": "rm -rf addon/snapshots",
    "clear.full": "rm -rf node_modules package-lock.json",

    "lint": "web-ext lint -s ./addon",
    "test": "./node_modules/.bin/jest"
  },
  "author": "mbnuqw",
  "license": "MIT",
  "devDependencies": {
    "@vue/component-compiler-utils": "3.0.0",
    "babel-core": "6.26.3",
    "babel-jest": "24.7.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.2.2",
    "jest": "24.7.1",
    "parcel-bundler": "1.12.3",
    "pug": "2.0.3",
    "regenerator-runtime": "0.13.2",
    "stylus": "0.54.5",
    "vue-hot-reload-api": "2.3.3",
    "vue-server-renderer": "2.6.10",
    "vue-template-compiler": "2.6.10",
    "vue-template-es2015-compiler": "1.9.1",
    "web-ext": "3.0.0"
  },
  "dependencies": {
    "vue": "2.6.10",
    "vuex": "3.1.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "useTabs": false
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "browserslist": [
    "Firefox > 60"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "setupFiles": [
      "./test/web-ext-setup.js",
      "./test/env-setup.js"
    ],
    "testMatch": [
      "**/src/directives/*.test.js",
      "**/src/mixins/*.test.js",
      "**/src/libs/*.test.js",
      "**/src/sidebar/*.test.js",
      "**/src/sidebar/actions/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
